@model IEnumerable<BookViewModel>;
@{
    ViewData["Title"] = "Index";
}

<h1>書籍列表</h1>
<h3>@ViewBag.Title</h3>
<h3>@ViewData["Description"]</h3>
<h5>@ViewBag.Today</h5>

<form asp-action="Index" method="post">
    @Html.AntiForgeryToken()
    <div class="input-group mb-3">
        <input type="text" name="Id" value="@ViewBag.Id" class="form-control" placeholder="book's id" />
        <button type="submit" class="btn btn-primary" style="margin-left:10px">Search</button>
        <a asp-action="Create" asp-controller="books" class="btn btn-primary" style="margin-left:10px">新增</a>
    </div>
</form>
<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Price</td>
                        <td>
                            <a asp-action="update" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
