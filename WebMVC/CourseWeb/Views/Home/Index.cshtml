@model IEnumerable<CourseScheduleViewModel>;
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <style>
        .course-card {
            border: 2px solid #d3d3d3 !important;
            /* 灰色邊框 */
            border-radius: 15px !important;
            /* 增加圓弧角度 */
            transition: all 0.3s ease;
            /* 平滑過渡效果 */
            cursor: pointer;
            overflow: hidden;
            /* 確保圖片不會超出圓角 */
        }

            .course-card:hover {
                border-color: #007bff !important;
                /* 滑鼠懸停時變成藍色邊框 */
                box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
                /* 添加陰影效果 */
                transform: translateY(-2px);
                /* 輕微上移效果 */
            }

            .course-card .card-img-top {
                border-top-left-radius: 13px !important;
                border-top-right-radius: 13px !important;
                /* 確保圖片上方圓角與卡片一致 */
            }
    </style>
}

<div id="courseCarousel" class="carousel slide" data-bs-ride="carousel" style="margin-bottom:20px">
    
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Imgs/b5.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Imgs/b6.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Imgs/b3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4" style="margin-top:10px">
        @{
            foreach(var i in Model)
            {
                var cid = "c_"+i.Id;
                <div class="col">
                    <div class="card h-100 course-card">
                        <img src="https://www.pcschool.com.tw/updimg/act/RWD_012/A12/A12.webp" class="card-img-top" alt="...">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <label class="d-block" style="font-size:18px;font-weight:bold">
                                    @i.CourseName
                                </label>
                                <label class="d-block" style="font-size:14px;color:dodgerblue">授課講師: @i.TeacherName</label>
                            </div>
                            <ul class="list-unstyled mt-auto" style="font-size:12px">
                                <li>
                                    <strong>上課日期:</strong> @i.StartDate - @i.EndDate
                                </li>
                                <li><strong>上課地點:</strong> @i.Location</li>
                                <li><strong>課程長度(小時):</strong> @i.Times</li>
                            </ul>
                        </div>
                        <div class="card-footer text-muted">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@cid">
                                課程介紹
                            </button>
                        </div>
                    </div>
                </div>

                <div class="modal fade" id="@cid" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">@i.CourseName</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                @i.Desc
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</div>
