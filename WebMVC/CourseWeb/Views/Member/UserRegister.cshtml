<h1>UserRegister</h1>
<div class="login-container">
<form asp-action="UserRegister" asp-controller="Member" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="username">帳號</label>
        <input type="text" class="username" id="username" />
    </div>    
    <div class="form-group">
        <label for="pw">密碼</label>
        <input type="password" class="pw" id="pw" />
    </div>
    <div class="form-group">
        <label for="repw">再次確認密碼</label>
        <input type="password" class="repw" id="repw" />
    </div>
    <div class="form-group">
        <label for="email">電子郵件</label>
        <input type="text" class="email" id="email" />
    </div>
    <button type="submit" class="btn btn-primary mb-3">登入</button>
</form>
</div>